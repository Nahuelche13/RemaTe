<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="AdwWindow" id="_root">
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkBox">
                <property name="margin-bottom">24</property>
                <property name="margin-end">24</property>
                <property name="margin-start">24</property>
                <property name="margin-top">24</property>
                <property name="orientation">1</property>
                <property name="spacing">24</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Remates</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="true">Día de Inicio</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkCalendar" id="_calendar">
                    <property name="show-heading">true</property>
                    <property name="show-day-names">true</property>
                    <property name="show-week-numbers">false</property>
                    <style>
                      <class name="card"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="true">Duracion</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="halign">3</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkSpinButton" id="_hours">
                        <property name="halign">3</property>
                        <property name="orientation">1</property>
                        <property name="wrap">true</property>
                        <property name="value">0</property>
                        <property name="climb-rate">1</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">0</property>
                            <property name="upper">23</property>
                            <property name="step-increment">1</property>
                            <property name="value">0</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">:</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSpinButton" id="_minutes">
                        <property name="halign">3</property>
                        <property name="orientation">1</property>
                        <property name="wrap">true</property>
                        <property name="climb-rate">1</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">0</property>
                            <property name="upper">59</property>
                            <property name="step-increment">1</property>
                            <property name="value">0</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Métodos de pago </property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="_checkbox_1">
                    <property name="label">Efectivo</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="_checkbox_2">
                    <property name="label">Crédito</property>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="_checkbox_3">
                    <property name="label">Débito</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <child>
                      <object class="AdwButtonContent">
                        <property name="icon-name">image-print-symbolic</property>
                        <property name="label">Selecionar lotes</property>
                        <property name="valign">3</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkCenterBox">
                    <child type="start">
                      <object class="GtkButton" id="_deleteButton">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="icon-name">user-trash-symbolic</property>
                            <property name="label">Borrar</property>
                            <property name="valign">3</property>
                          </object>
                        </child>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton" id="_saveButton">
                        <child>
                          <object class="AdwButtonContent">
                            <property name="icon-name">document-save-symbolic</property>
                            <property name="label">Guardar</property>
                            <property name="valign">3</property>
                          </object>
                        </child>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
</interface>